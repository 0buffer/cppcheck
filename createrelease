#!/bin/bash

cd

echo "Creating source directory"
svn co https://cppcheck.svn.sourceforge.net/svnroot/cppcheck cppcheck-1.29
rm -R --force cppcheck-1.29/.svn
rm -R --force cppcheck-1.29/gui
rm -R --force cppcheck-1.29/man/.svn
rm -R --force cppcheck-1.29/src/.svn
rm -R --force cppcheck-1.29/test/.svn
rm -R --force cppcheck-1.29/tools/.svn
rm -R --force cppcheck-1.29/win_installer/.svn

echo "Creating source packages"
tar cjvf cppcheck-1.29.tar.bz2 cppcheck-1.29
tar czvf cppcheck-1.29.tar.gz cppcheck-1.29
cd cppcheck-1.29
zip -r -9 ../cppcheck-1.29.zip *

